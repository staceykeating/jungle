

<div class="user-auth"> 
<h1>Register</h1>
<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
  <%= f.label :first_name %>:
  <input type="First Name" class='form-control' <%= f.text_field :first_name %> 
    <%= f.label :last_name, 'Last Name' %>
    <input type="Last Name" class='form-control' <%= f.text_field :last_name %> 
    <%= f.label :email, 'Email Address' %>
    <input type="Email" class='form-control' <%= f.text_field :email %> 
  </div>
  <div class="form-group">
  <%= f.label :password, 'Password' %>
  <input type="Password" class='form-control' <%= f.text_field :password %> 
  <%= f.label :password_confirmation, 'Confirm Password' %>
  <input type="Password" class='form-control' <%= f.text_field :password_confirmation %> 

  </div>
  <button type="submit" class="btn btn-primary">Register</button>
  <% end %>
  </div>
